<div class="image_border_main_container">
  <div class="image_border_top_container">
    <% 10.times do %>
      <%= image_tag "clients/lil_c.jpg", class: :lil_c_border_top_img %>
    <% end %>
  </div>
  
  <div class="image_border_middle_container">
    <div class="image_border_left_container">
      <% 8.times do |i| %>
        <%= image_tag "clients/lil_c.jpg", class: :"lil_c_border_side_img #{(i > 4) ? 'lil_c_border_side_img_mobile' : ''}" %>
      <% end %>
    </div>
    
    <div class="lil_c_form">
      <%= render "templates/lil_c_sign_up_form" %>
    </div>
    
    <div class="image_border_right_container">
      <% 8.times do |i| %>
        <%= image_tag "clients/lil_c.jpg", class: :"lil_c_border_side_img #{(i > 4) ? 'lil_c_border_side_img_mobile' : ''}" %>
      <% end %>
    </div>  
  </div>

  <div class="image_border_top_container">
    <% 10.times do %>
      <%= image_tag "clients/lil_c.jpg", class: :lil_c_border_top_img %>
    <% end %>
  </div>
</div>

<div class="vertical_spacer"></div>
