<div class="dsa_card" align="center">
  <%= form_for(@item_library) do |f| %>
    <% if @editing %>
      <p>
        Currently editing <%= link_to @item_library.name, item_library_path(@item_library) %>
      </p>
    <% end %>

    <p>
      <%= f.text_field :name, placeholder: "Name", class: :surveys_text_field %>
    </p>

    <p>
      <%= f.text_area :body, placeholder: "Description", class: :surveys_text_area %>
    </p>

    <button type="submit" name="commit" class="surveys_form_button">
      <b><%= @editing ? "Save" : "Create" %> <i class="fa fa-pencil"></i></b>
    </button>
  <% end %>
</div>
