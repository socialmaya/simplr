<div class="dark_card" align="center">
  <%= render "app/time_ago", item: order, white_link: true %>
  <p>
    Thank you, <%= order.user.name %>
  </p>
  <p>
    Your confirmation code is <b><%= order.unique_token %></b>
  </p>
  <p>
    <%= order.products.size %> item(s) in this order
  </p>
  <p>
    Total was <%= order.total.format %>
  </p>
</div>
