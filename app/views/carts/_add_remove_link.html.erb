<% link_id = "add_remove_cart_link_#{product.id}" %>

<% unless in_my_cart? product %>
  <%= link_to "Add to cart", add_to_cart_path(product.unique_token),
    method: :put, remote: true, class: "standard_post_link white_link", id: link_id %>
<% else %>
  <%= link_to "Remove from cart", remove_from_cart_path(product.unique_token),
    method: :put, remote: true, class: "standard_post_link white_link", id: link_id %>
<% end %>
