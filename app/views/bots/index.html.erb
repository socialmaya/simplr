<%= link_to destroy_all_bots_path, method: :delete, title: "Click here to permanently destroy all bots.",
  data: { confirm: "Are you sure you want to permanently destroy all bots?" } do %>
  <h2 class="standard_page_header">Bots <i class="fa fa-cogs"></i></h2>
<% end %>

<% for bot in @bots %>
  <%= render "bots/card", bot: bot %>
<% end %>
