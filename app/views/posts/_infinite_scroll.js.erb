function infinite_scroll() {
  $(window).bindWithDelay("scroll", function() {
	  if($(window).scrollTop() + $(window).height() > $(document).height() - 300) {
		  if ($("#more_content_anchor").length) {
			  var param = null;
			  param = $.param({ <%= param %>: true });
			  if (param) {
				  $.ajax({
					  type: "GET",
					  url: "/pages/more",
					  data: param
				  });
			  }
		  }
	  }
  }, 200);
}

if (!infinite_scroll_started) {
  infinite_scroll();
  var infinite_scroll_started = true;
}
