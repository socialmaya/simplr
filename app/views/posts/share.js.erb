<% if @note %>
  var link = $("#<%= "share_post_link_#{@post.id}" %>");
  var anchor = $("#<%= "share_post_link_anchor_#{@post.id}" %>");

  link.remove();
  anchor.after("<%=j render "posts/share_link", post: @post %>");

  // flashes post card border for share, same color as zen like
  flash_border();
  setTimeout(flash_border, 1000);
  function flash_border() {
    $("#post_card_<%= @post.id %>").toggleClass("border_flash_zen");
  }

  $("#universal_anchor").after("<%=j render 'notes/dialog', note: @note %>");
  var note_dialog = $("#note_dialog");
  note_dialog.fadeIn(1500);
  note_dialog.fadeOut(5000);
<% end %>
