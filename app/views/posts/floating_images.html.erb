<% for post in @posts %>
  <% for picture in post.pictures %>
    <%= link_to show_post_path post.unique_token do %>
      <%= image_tag picture.image, class: :floated_image %>
    <% end %>
  <% end %>
<% end %>

<script>
  $(function() {
    var screen_width = window.screen.width;
    var first_height = $(".floated_image:first").height();
    $(".floated_image").each(function() {
      var ratio = $(this).width() / $(this).height();
      $(this).height(first_height);
      $(this).width(ratio * first_height);
    });
  });
</script>
