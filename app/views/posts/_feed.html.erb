<!-- posts -->

<% items.each do |item| %>
  <% if item.is_a? Post %>
    <%= render "posts/card", post: item %>
  <% elsif item.is_a? Proposal %>
    <%= render "proposals/card", proposal: item %>
  <% end %>

  <%= render "users/featured" %>
  <%= render "groups/featured" %>

  <%= render "connections/stop_invited_music" %>
<% end %>

<% unless @items.size < page_size %>
	<div id="more_content_anchor"></div>
<% end %>

<%= render "app/color_settings" %>
