<% if @successfully_created %>
  var form = $("#new_post_form");

  form.after("<%=j render 'form' %>");
  form.remove();

  $("#post_form_card").after("<%=j render 'card', post: @post_just_created %>");

  $("#post_interface_sound")[0].currentTime = 0;
  $("#post_interface_sound")[0].play();
  
  $(".load_element").fadeOut(3000);
<% end %>
