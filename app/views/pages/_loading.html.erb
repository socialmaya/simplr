<script>
  <% seq_size = 15 %>
  <%= render "pages/load_screen.js", seq_size: seq_size.to_s %>
  <%= render "pages/still_loading_fader.js" %>
</script>

<div id="vertical_load_screen" class="fibonacci_loading">
  <% for i in fib_seq(1..seq_size) %>
    <% rgb = lambda { Random.rand(255).to_s } %>
    <div class="load_fib_bar" id="load_fib_bar_<%= fib_seq(1..seq_size).index(i) %>"
      style="height:<%= i %>px;background:rgb(<%= rgb.call + ', ' + rgb.call + ', ' + rgb.call %>);">
      
      <% if i.eql? 89 %>
        <div id="loading_label">
          <strong class="fib_loading_label">Loading...</strong>
        </div>
      <% end %>
      
    </div>
  <% end %>
  
  <strong id="still_loading_label">
    ...still loading
  </strong>
</div>
