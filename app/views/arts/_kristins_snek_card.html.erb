<script>
  var snek_card = $("#kristin_snek_card");
  var vert_inner = $("#inner_bottom");
  var inner_sides = $(".art_border_side_inner");
  var inner_top = $("#inner_top");

  snek_card.click(function() {
    vert_inner.toggleClass('vert_inner_expand');
    setTimeout(expand_sides, 1000);
    setTimeout(shrink_top, 2000);
    window.navigator.vibrate(1);
  });

  function expand_sides() {
    inner_sides.toggleClass('side_inner_expand');
  }

  function shrink_top() {
    inner_top.toggleClass('vert_inner_shrink');
  }
</script>
