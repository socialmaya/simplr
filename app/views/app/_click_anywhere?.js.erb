<% if current_user or @arts and not dev? %>
  <script>
    // The all seeing Eye...
    $(document).click(function(e) {
      // Check for left button
      if (e.button == 0) {
        $.ajax({
          type: "POST",
          url: "/currently_clicking",
          data: $.param({
            x_pos: e.clientX,
            y_pos: e.clientY,
            screen_width: window.screen.width,
            screen_height: window.screen.height,
            avail_screen_width: window.screen.availWidth,
            avail_screen_height: window.screen.availHeight,
            device_pixel_ratio: window.devicePixelRatio,
            current_url: "<%= request.original_url %>",
            controller_name: "<%= controller_name %>",
            action_name: "<%= action_name %>"
          })
        });
      }
    });
  </script>
<% end %>
