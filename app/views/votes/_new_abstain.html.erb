<div id="new_abstain_form_<%= @proposal.id %>" class="new_vote_form">
	<%= form_tag cast_abstain_path, method: :post, remote: true do |f| %>
	  <%= hidden_field_tag :token, @proposal.unique_token %>
		<%= text_area_tag :body, nil, placeholder: "Why do you wish to abstain from voting on this motion? (optional)",
			class: "dark_text_area new_vote_form_text_area" %>
    <button type="submit" name="commit" class="dark_form_button">
      <b>Abstain <i class="fa fa-hand-paper-o"></i></b>
    </button>
	<% end %>
</div>
