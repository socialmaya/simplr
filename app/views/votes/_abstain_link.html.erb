<% link_id = "abstain_proposal_link_#{item.id}" %>
<% link_class = ((defined?(bottom_left) and bottom_left) ? :bottom_left_link : :standard_post_link) %>

<% unless abstained_from_vote? item %>
  <%= link_to "Abstain#{(' ' + item.abstains.size.to_s) unless item.abstains.size.zero?}",
    new_abstain_vote_path(item.unique_token), remote: true, class: link_class, id: link_id %>
<% else %>
  <%= link_to "Unabstain #{item.abstains.size.to_s}", unabstain_path(token: item.unique_token, unabstain: true), method: :delete,
    remote: true, class: link_class, id: link_id %>
<% end %>

<%= render "app/link_sound.js", link_id: link_id, sound: :post_interface_sound %>
