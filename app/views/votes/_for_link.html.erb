<% link_id = "for_proposal_link_#{item.id}" %>
<% link_class = ((defined?(bottom_left) and bottom_left) ? :bottom_left_link : :standard_post_link) %>

<% unless up_voted? item %>
  <%= link_to "Support#{(' ' + item.up_votes.size.to_s) unless item.up_votes.size.zero?}",
    new_up_vote_path(item.unique_token), remote: true, class: link_class, id: link_id %>
<% else %>
  <%= link_to "Unsupport #{item.up_votes.size.to_s}", unfor_path(token: item.unique_token, unfor: true), method: :delete,
    remote: true, class: link_class, id: link_id %>
<% end %>
