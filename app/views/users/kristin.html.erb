<%= render "users/profile_card", user: @kristin %>

</br>
<%= render "treasures/crescent" %>
</br>

<% if this_user_current? %>
  <%= render "users/progress_bar", user: @kristin if @kristin.xp %>
  <div class="dark_card">
    <%= render "posts/form" %>
  </div>
<% end %>

<% for post in @posts %>
  <% if post.is_a? Proposal %>
    <%= render "proposals/card", proposal: post %>
  <% else %>
    <%= render "posts/card", post: post %>
  <% end %>
<% end %>


<%= render "load_more_link", user: @kristin %>

<% if @posts.empty? %>
  <div class="card">
    <p align="center">
      <% if @kristin.eql? current_user %>
        You haven't posted anything yet.
      <% else %>
        <%= @kristin.name + " hasn't posted anything yet." %>
      <% end %>
    </p>
  </div>
<% end %>

<%= audio_tag "effects/magic.wav", id: "zen_sound" %>
<%= audio_tag "effects/bip.mp3", id: "post_interface_sound" %>

<% unless dev? %>
  <%= audio_tag "music/future_business.mp3", id: "creator_music" %>

  <script>
    $("#creator_music")[0].currentTime = 0;
    $("#creator_music")[0].play();
  </script>
<% end %>
