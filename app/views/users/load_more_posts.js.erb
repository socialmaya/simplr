var load_more_posts_link = $("#load_more_posts_link")
var anchor = $("#load_more_posts_anchor");

anchor.after("<%=j render "users/more_posts", posts: @posts %>");
anchor.remove();

load_more_posts_link.toggle();
$("#load_bar").toggle();

$("#more_content_sound")[0].currentTime = 0;
$("#more_content_sound")[0].play();

<% if @posts.empty? or @posts.size < page_size %>
  load_more_posts_link.remove();
<% end %>

window.navigator.vibrate(1);
