<% link_id = "add_remove_wish_list_link_#{product.id}" %>

<% unless in_my_wish_list? product %>
  <%= link_to "Add to wish list", add_to_wish_list_path(product.unique_token),
    method: :put, remote: true, class: "standard_post_link white_link", id: link_id %>
<% else %>
  <%= link_to "Remove from wish list", remove_from_wish_list_path(product.unique_token),
    method: :put, remote: true, class: "standard_post_link white_link", id: link_id %>
<% end %>
