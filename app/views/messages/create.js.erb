function refresh_new_message_form() {
  var form = $("#new_message_form");
  var anchor = $("#message_form_anchor");
  form.remove();
  anchor.after("<%=j render 'messages/form' %>");
  
  $("#post_interface_sound")[0].currentTime = 0;
  $("#post_interface_sound")[0].play();
}

refresh_new_message_form();
