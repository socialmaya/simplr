function new_comment_form() {
  var proposal_id = <%= @proposal.id %>;
  var form_anchor = $("#new_form_anchor_" + proposal_id);
  var form = $("#new_comment_form_" + proposal_id);
  var link = $("#new_comment_link_" + proposal_id);
  var link_anchor = $("#proposal_comments_link_anchor_" + proposal_id);
  var up_form = $("#new_up_vote_form_" + proposal_id);
  var down_form = $("#new_down_vote_form_" + proposal_id);

  if (!form.length) {
	  form_anchor.after("<%=j render 'proposals/new_comment_form' %>");
  }
    
  if (up_form.length) {
    up_form.remove();
  }
  
  if (down_form.length) {
    down_form.remove();
  }
  
  // interface sound plays
  $("#post_interface_sound")[0].currentTime = 0;
  $("#post_interface_sound")[0].play();
}

new_comment_form();
