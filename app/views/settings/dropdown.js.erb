var container = $("#settings_nav_container");
var anchor = $("#settings_nav_anchor");

container.toggleClass('standard_modal', true);

anchor.after("<%=j render 'settings/settings', hidden: true %>");

var dropdown = $("#settings_dropdown");
dropdown.fadeIn();
setTimeout(toggle_dropdown, 1000);

function toggle_dropdown() {
  dropdown.toggleClass('settings_expand', true);
}
