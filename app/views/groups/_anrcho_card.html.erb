<div class="card">
  <%= render "users/avatar_card_link", token: group.unique_token %>
  <%= render "app/time_ago", item: group %>
  <%= render "app/seent", item: group %>
	<div align="center">
		<% group_link_path = @group_shown ? search_path(query: group.unique_token) : group_path(group.unique_token) %>
		<p><%= link_to "Group #{group.unique_token}", group_link_path %></p>
		
		<% if group.body.present? %>
      <p class="<%= 'justified_body_text' if group.body.size > 150 %>">
        <%= render "app/body", item: group %>
      </p>
		<% end %>
		
		<% if @group_shown %>
			<%= render "groups/nav_table", group: group %>
			<div id="insert_form_anchor"></div>
		<% end %>
	</div>
</div>
