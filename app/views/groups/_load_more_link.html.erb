<% if @items_size > @items.size %>
  <div id="load_more_posts_anchor"></div>
  <div class="dark_card" align="center" id="load_more_posts_link">
    <p>
      <%= link_to "Load more posts...", load_more_group_posts_path(token: group.unique_token),
        remote: true, class: :white_link %>
    </p>
  </div>

  <%= audio_tag "interface/interface_9.mp3", id: "more_content_sound" %>
  
  <script>
    var link = $("#load_more_posts_link");
    link.click(function(){
      link.toggle();
      $("#load_bar").toggle();
      // sound for the click
      $("#post_interface_sound")[0].currentTime = 0;
      $("#post_interface_sound")[0].play();
    })
  </script>
<% end %>
