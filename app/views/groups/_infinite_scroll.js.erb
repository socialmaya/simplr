function groups_infinite_scroll() {
  $(window).bindWithDelay("scroll", function() {
	  if($(window).scrollTop() + $(window).height() > $(document).height() - 300) {
		  if ($("#more_content_anchor").length) {
			  var param = null;
			  param = $.param({ group_id: <%= @group.id %> });
			  if (param) {
				  $.ajax({
					  type: "GET",
					  url: "/pages/more",
					  data: param
				  });
			  }
		  }
	  }
  }, 200);
}

if (!groups_infinite_scroll_started) {
  groups_infinite_scroll();
  var groups_infinite_scroll_started = true;
}
