<% @groups = my_groups.sort_by {|g| (g.posts.present? ? g.posts.last.created_at : g.created_at) }.reverse %>

<%= render "groups/form" %>

<% @groups.each do |group| %>
  <%= render "groups/card", group: group %>
<% end %>

<% if @groups.empty? %>
  <div class="card">
    <p align="center">
      <% if current_user %>
        You aren't in any groups yet. <%= link_to "Click here",
          search_path(query: "groups") %> to search for groups to join.
      <% else %>
        <%= link_to "Click here", new_user_path %> to sign up and start joining groups.
      <% end %>
    </p>
  </div>
<% end %>
