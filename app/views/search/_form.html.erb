<div align="center" id="new_search_form">
  <% placeholder = (session[:query] ? "Last query: #{session[:query]}" : "Search") %>
  <%= form_tag search_path, method: :get do |f| %>
	  <table id="search_form_table">
		  <tr>
			  <td>
				  <%= text_field_tag :query, nil, placeholder: placeholder, id: :search_form_text_field %>
			  </td>
			  <td>
			    <button type="submit" name="commit">
			      <i class="fa fa-search"></i>
			    </button>
			  </td>
		  </tr>
	  </table>
  <% end %>
</div>
